<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.fhao.modules.sys.dao.SysSaleGoodsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.fhao.modules.sys.entity.SysSaleGoods" id="saleGoodsMap">
        <result property="id" column="id"/>
        <result property="vgno" column="vgno"/>
        <result property="goodsNo" column="goods_no"/>
        <result property="goodsName" column="goods_name"/>
        <result property="englishName" column="english_name"/>
        <result property="price" column="price"/>
        <result property="supplyId" column="supply_id"/>
        <result property="categoryId" column="category_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

	<select id="queryObject" resultType="io.fhao.modules.sys.entity.SysSaleGoods">
		select * from sale_goods where id = #{value}
	</select>

	<select id="queryList" resultType="io.fhao.modules.sys.entity.SysSaleGoods">
		select sg.*,sc.`name` as categoryName, ss.`name` as supplyName 
		from sale_goods sg left join sale_category sc on sg.category_id=sc.id left join sale_supply ss on sg.supply_id=ss.id 
		<where>
			<if test="keyword != null and keyword != ''">
				and (
					goods_name like concat('%',#{keyword},'%')
					or english_name like concat('%',#{keyword},'%')
					or vgno = #{keyword}
					or goods_no = #{keyword}
					or supply_id = #{keyword} 
					or category_id = #{keyword} 
				)
			</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sale_goods 
	</select>
	 
	<insert id="save" parameterType="io.fhao.modules.sys.entity.SysSaleGoods" useGeneratedKeys="true" keyProperty="id">
		insert into sale_goods
		(
			`vgno`, 
			`goods_no`, 
			`goods_name`, 
			`english_name`, 
			`price`, 
			`supply_id`, 
			`category_id`, 
			`create_time`, 
			`update_time`
		)
		values
		(
			#{vgno}, 
			#{goodsNo}, 
			#{goodsName}, 
			#{englishName}, 
			#{price}, 
			#{supplyId}, 
			#{categoryId}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="io.fhao.modules.sys.entity.SysSaleGoods">
		update sale_goods 
		<set>
			<if test="vgno != null">`vgno` = #{vgno}, </if>
			<if test="goodsNo != null">`goods_no` = #{goodsNo}, </if>
			<if test="goodsName != null">`goods_name` = #{goodsName}, </if>
			<if test="englishName != null">`english_name` = #{englishName}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="supplyId != null">`supply_id` = #{supplyId}, </if>
			<if test="categoryId != null">`category_id` = #{categoryId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sale_goods where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sale_goods where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>